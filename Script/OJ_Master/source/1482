
//Problem1482


#include<stdio.h>
long long int s(int n);
int main()
{
	int i, n;
	long long int sun = 0;
	scanf("%d", &n);
	
	
		for (i = 1; i <= n; i++)
			sun = sun + s(i);
		printf("%lld", sun);
	
}
long long int s (int n)
{
	int i=1;
	long long int t = 1;
	for (i = 1; i <= n; i++)
		t = t*i;
	return t;
	
}



