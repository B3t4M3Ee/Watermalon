
//Problem2099


#include<stdio.h>
#include<string.h>
struct x
{
	double n;
	char a[3];
	double ans;
}t;
int main()
{
	char kg[3] = "kg";
	char lb[3] = "lb";
	char g[3] = "g";
	char l[3] = "l";
	int n;
	scanf("%d", &n);
	for (int k = 0; k < n; k++)
	{
		scanf("%lf%s", &t.n, t.a);
		if (strcmp(t.a, kg) == 0)
		{
			printf("%d %.4lf %s\n", k + 1, t.n*2.2046, lb);
		}
		else if(strcmp(t.a, lb) == 0)
		{
			printf("%d %.4lf %s\n", k + 1, t.n*0.4536, kg);
		}
		else if (strcmp(t.a, g) == 0)
		{
			printf("%d %.4lf %s\n", k + 1, t.n * 3.7854, l);
		}
		else if (strcmp(t.a, l) == 0)
		{
			printf("%d %.4lf %s\n", k + 1, t.n * 0.2642, g);
		}
	}
}



