
//Problem1177




#include<stdio.h>
int main()
{
	int n, m, i;
	scanf("%d", &n);
	for (i = 0; i < n; i++)
	{
		for (m = 0; m < n - 1 - i; m++)
			printf(" ");
		for (m = 0; m < i * 2 + 1; m++)
		{
			printf("*");

		}
		printf("\n");
	}
	for (i = n - 1; i >= 0; i--)
	{
		for (m = n - i; m>0; m--)
			printf(" ");
		for (m = 2 * i - 1; m > 0; m--)
			printf("*");
		printf("\n");
	}

}





