
//Problem2134


#include<stdio.h>
int main()
{
	int n;
	while (scanf("%d", &n) != EOF)
	{
		int i;
		for (int k = 0; k < n; k++)
		{
			for (i = 0; i < n - 1 - k; i++)
			{
				printf("  ");

			}
			for (i = 0; i < k; i++)
				printf("%d ", i + 1);
			printf("%d", i + 1);
			for (i = k; i >0; i--)
				printf(" %d",i);
			printf("\n");
		}
		

	}

}



