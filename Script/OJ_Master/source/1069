
//Problem1069




#include<stdio.h>
int lx(int n)
{
	int m, i;
	
	for (i = 0; i < n/2+1; i++)
	{
		for (m = 0; m <n/2-i; m++)
			printf(" ");
		for (m = 0; m < 2*i+1; m++)
		{
			printf("*");

		}
		printf("\n");
	}
	for (i = n/2 ; i > 0; i--)
	{
		for (m = n/2 - i+1; m>0; m--)
			printf(" ");
		for (m = 2*i-1; m > 0; m--)
		printf("*");
		printf("\n");
	}
	return 0;
}
int main()
{
	int k;
	int i = 0;
	int a[10000];
	while (scanf("%d",&a[i]),a[i])
	{
		
		i++;
		k = i;
	}
	for (i = 0; i < k; i++)
		lx(a[i]);
}





