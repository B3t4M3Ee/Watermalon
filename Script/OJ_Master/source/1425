
//Problem1425




#include<stdio.h>
double fact(int n) {
	int i;
	double o = 1;
	if (n == 0) return 1;
	else {
	for (i = 1; i <= n; i++)
		o = o*i;
	return o;
}
}
int main()
{
	double sum=0;
	int i,t,n;
	scanf("%d", &n);
	for (i = 1; i <= n; i++)
	{
		sum += 1.0 / fact(i);
	}
	printf("sum=%.5lf", sum);
}



