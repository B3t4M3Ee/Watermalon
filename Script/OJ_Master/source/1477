
//Problem1477


#include<stdio.h>
#define P 3.14
int main()
{
	double r, h, a;
	scanf("%lf %lf", &r, &h);
	a = 2 * P*r;
	printf("C1=%.2lf\n", a);
	a = r*r*P;
	printf("Sa=%.2lf\n", a);
	a = 4 * P*r*r;
	printf("Sb=%.2lf\n", a);
	a = 4  * P*r*r*r/3;
	printf("Va=%.2lf\n", a);
	a = r*r*P*h;
	printf("Vb=%.2lf\n", a-0.005);
}




