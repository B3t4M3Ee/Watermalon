
//Problem1486


#include <stdio.h>
int main()
{
double n[3],m[3];
	int i,t;
double add=3.5;
n[0]=2,n[1]=3;
m[0]=1,m[1]=2;
scanf ("%d",&t);
if(t==1)
printf("2.00");
else if(t>1)
{
for(i=2;i<t;i++)
 
{
	n[2]=n[1]+n[0];
    m[2]=m[1]+m[0];

	add=add+n[2]/m[2];
   
    n[0]=n[1],m[0]=m[1];
    n[1]=n[2],m[1]=m[2];
}
}

printf("%.2f",add);}




